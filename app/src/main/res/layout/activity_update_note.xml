<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    android:backgroundTint="#FFC107"
    tools:context=".AddNoteActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="141dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Edit Task"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textColorHighlight="@color/orange"
        android:textColorHint="@color/orange"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/updatebtn"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:layout_marginStart="166dp"
        android:layout_marginTop="652dp"
        android:layout_marginEnd="188dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editnotetitle"
        android:layout_width="284dp"
        android:layout_height="87dp"
        android:layout_marginTop="204dp"
        android:background="@android:drawable/editbox_background"
        android:fontFamily="@font/poppins_medium"
        android:hint="Edit Title here"
        android:maxLines="1"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/editdescription"
        android:layout_width="282dp"
        android:layout_height="259dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/edit_text"
        android:fontFamily="@font/poppins_medium"
        android:gravity="top"
        android:hint="Edit Description"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editnotetitle" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="290dp"
        android:layout_height="194dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/editnotetitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/updatpic" />

</androidx.constraintlayout.widget.ConstraintLayout>